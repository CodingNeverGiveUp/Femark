/* utils/components/switch/switch.wxss */
.hover {
  background: var(--rgbaprimaryColor--);
}

.component {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 10px 50rpx;
  transition: .2s ease-in-out;
}

.text {
  width: 90%;
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.switch{
  position: relative;
  width: 15%;
  height: 100%;
  /* background: pink; */
  display: flex;
  align-items: center;
}

.bar{
  position: absolute;
  right: 2px;
  height: 13px;
  width: 30px;
  background: #9e9e9e;
  border-radius: 6.5px;
  transition: background .2s ease-in-out;
}

.dot{
  position: absolute;
  right: 17px;
  width: 17px;
  height: 17px;
  background: #fff;
  border-radius: 100%;
  box-shadow: 3px 3px 10px #ddd;
  transition: background .2s ease-in-out, right .2s ease-in-out;
}

.subtitle{
  font-size: .8rem;
  color: #666;
}

@media (prefers-color-scheme: dark) {
  .dot{
    box-shadow: 2px 2px 10px #222;
  }

  .subtitle{
    color: #ccc;
  }
}