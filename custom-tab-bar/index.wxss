@media (prefers-color-scheme: dark) {
  .main {
    background: #303638;
    box-shadow: 0 0 10rpx #222;
    /* box-shadow: 0 0rpx 10rpx #bbb; */
  }

  .items {
    background: #303638;
    color: #ccc;
  }

  .list_item{
    color: #fff;
  }

  .list_add_item{
    color: #ccc;
  }

  .content{
    color: #fff;
  }

  .content_input{
    border: 2px solid #ccc;
  }

  .content_input .content_placeholder {
    background: #303638;
    color: #ccc;
  }

  .float {
    background: #303638;
    box-shadow: 0 0 10rpx #222;
  }

  .float_selection_text {
    background: #303638;
    box-shadow: 0 0 10rpx #222;
    color: #ccc;
  }

  .float_selection_bg {
    box-shadow: 0 0 10rpx #222;
    background: #303638;
  }


  .t_hover {
    background: var(--rgbaprimaryColor--);
  }

  .sidebar {
    background: #303638;
    box-shadow: 0 0 10rpx #222;
    color: white;
  }

  .sec {
    color: #ccc;
  }

  .sec_blank {
    background: #666;
  }

  .content_btn_l {
    color: #ccc;
  }
}