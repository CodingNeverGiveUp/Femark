@import "/source/icon.wxss";

.main{
  position: fixed;
  display: flex;
  bottom: 0;
  left: 0;
  right: 0;
  height: 120rpx;
  /* background: #4981d7; */
  box-shadow: 0 -5rpx 20rpx #bbb;
  border-radius: 25rpx 25rpx 0 0;
  flex-direction: column;
  justify-content: flex-end;
  transition: height .2s ease-in-out;
}

.main > view{
  height: 120rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  align-items: center;
  color: #666;
  overflow: hidden;
}

.item{
  font-size: .8rem;
  display: flex;
  /* flex-direction: column; */
  justify-content: center;
  align-items: center;
  width: 220rpx;
  height: 220rpx;
  border-radius: 100%;
  transition: background .2s ease-in-out;
}

.item > view{
  display: flex;
  flex-direction: column;
  align-items: center;
}

.float{
  position: fixed;
  bottom: 170rpx;
  right: 50rpx;
  width: 110rpx;
  height: 110rpx;
  box-shadow: 0 0 20rpx #bbb;
  border-radius: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  transition: background .2s ease-in-out, bottom .2s ease-in-out, transform .2s linear;
}

.hover{
  background: var(--rgbaprimaryColor--);
  transition: none;
}

.t_hover{
  background: var(--rgbaprimaryColor--);
}

@media (prefers-color-scheme: dark) {
  .main{
    background: #303638;
    box-shadow: 0 0 0 #444;
  }

  .float{
    background: #303638;
    box-shadow: 0 0 0 #444;
  }
}