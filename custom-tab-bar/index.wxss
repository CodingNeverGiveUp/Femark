.main {
  position: fixed;
  display: flex;
  bottom: 0;
  left: 0;
  right: 0;
  height: 65px;
  /* background: #4981d7; */
  box-shadow: 0 0 10rpx #bbb;
  border-radius: 10px 10px 0 0;
  flex-direction: column;
  justify-content: flex-end;
  transition: background .2s ease-in-out, height .2s ease-in-out;
  background: #ffffff;
  overflow: hidden;
}

.h_main {
  bottom: -70px;
}

.items {
  height: 65px;
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  align-items: center;
  color: #666;
  background: #fff;
}

.item {
  font-size: .8rem;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  width: 220rpx;
  height: 220rpx;
  border-radius: 100%;
  transition: background .2s ease-in-out;
}

.list {
  padding: 40px 0 0 0;
  max-width: 400px;
}

.list_item {
  position: relative;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  padding: 0 10px;
  height: 40px;
  /* transition: box-shadow .2s ease-in-out; */
  /* background: #f1f1f1; */
}

.list_item_left {
  display: flex;
  flex-direction: row;
  align-items: center;
  width: 100%;
}

.list_item input {
  margin-left: 10px;
  width: 70%;
}

.list_add_item {
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center;
  padding: 0 50px;
  margin: 0 0 80px 0;
  transition: background .2s ease-in-out;
  color: #666;
}


.content {
  width: 100%;
  height: 300px;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  position: relative;
}

.content_title {
  font-size: 1.2rem;
  margin-bottom: 15px;
}

.content_subtitle {
  margin-bottom: 30px;
}

.content_input {
  width: 90%;
  height: 50px;
  border-radius: 5px;
  position: relative;
  border: 2px solid #666;
  transition: border .2s ease-in-out;
}

.content_input .input {
  position: absolute;
  top: 0;
  height: 100%;
  left: 20px;
  right: 20px;
}

.content_input .content_placeholder {
  color: #666;
  position: absolute;
  top: 15px;
  /* top: -10px; */
  /* transform: scale(.8); */
  left: 10px;
  padding: 0 10px;
  transition: top .2s ease-in-out, transform .2s ease-in-out, color .2s ease-in-out;
  background: #fff;
}

.content .material-icons .fin{
  margin: 50px;
  font-size: 3rem;
}

.content_btn_l {
  position: absolute;
  width: 80px;
  height: 35px;
  display: flex;
  justify-content: center;
  align-items: center;
  bottom: 10px;
  left: 20px;
  border-radius: 5px;
  transition: background .2s ease-in-out, color .2s ease-in-out;
  color: #666;
}

.content_btn_r {
  position: absolute;
  width: 80px;
  height: 35px;
  display: flex;
  justify-content: center;
  align-items: center;
  bottom: 10px;
  right: 20px;
  color: #fff;
  transition: opacity .2s ease-in-out;
  border-radius: 5px;
}

