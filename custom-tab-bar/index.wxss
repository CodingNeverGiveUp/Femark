@media (prefers-color-scheme: dark) {
  .main {
    background: #303638;
    box-shadow: 0 0 10rpx #222;
    /* box-shadow: 0 0rpx 10rpx #bbb; */
  }

  .float {
    background: #303638;
    box-shadow: 0 0 10rpx #222;
  }

  .t_hover {
    background: var(--rgbaprimaryColor--);
  }

  .sidebar {
    background: #303638;
    box-shadow: 0 0 10rpx #222;
    color: white;
  }

  .sec {
    color: #ccc;
  }

  .sec_blank {
    background: #666;
  }

  .dialog {
    background: #303638;
    box-shadow: 0 0 0 #444;
  }

}