.voice_input{
  box-sizing: border-box;
  height: 100px;
  width: 100%;
  padding: 0 50rpx;
  margin: 0 0 20px 0;
  display: flex;
  flex-direction: column;
  justify-content: center;
  /* background: #000; */
}

.voice_input textarea{
  width: auto;
  border-radius: 5px;
  border: 2px solid rgba(0,0,0,0);
  transition: border .2s ease-in-out;
  text-align: center;
}

.voice_btn_container{
  display: flex;
  justify-content: center;
  align-items: center;
  width: 100px;
  height: 100px;
  margin-bottom: 50px;
}

.voice_btn_border{
  transition: border .1s ease-in-out;
  border-radius: 100%;
  border-width: 0;
}

.voice_btn{
  width: 80px;
  height: 80px;
  display: flex;
  justify-content: center;
  align-items: center;
  border-radius: 100%;
  transition: background .2s ease-in-out, border .1s ease-in-out;
  font-size: 3rem;
}

.voice_btn_activated{
  color: #fff;
  background: var(--primaryColor--);
}

.voice_btn_inactivated{
  color: var(--primaryColor--);  
  background: rgba(0,0,0,0);
}

.btn_hover{
  background: var(--rgbaprimaryColor--)!important;
  border-color: var(--primaryColor--)!important;
}

.sidebar {
  position: fixed;
  display: flex;
  flex-direction: column;
  top: 0;
  left: -250px;
  width: 250px;
  background: #ffffff;
  box-shadow: 0 0 10rpx #bbb;
  height: 100vh;
  transition: background .2s ease-in-out, left .5s ease-in-out;
}

.head {
  height: 140rpx;
  display: flex;
  flex-direction: column;
  justify-content: flex-end;
  padding: 20rpx 0;
  min-height: 120px;
}

.icon {
  width: 40px;
  height: 40px;
  border-radius: 100%;
  /* background: pink; */
  display: flex;
  justify-content: center;
  align-items: center;
  transition: background .2s ease-in-out;
}

.menu_icon {
  position: fixed;
  top: 30px;
  left: 5px;
  width: 50px;
  height: 50px;
  border-radius: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  transition: background .2s ease-in-out;
}

.head_bar {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  margin: 0 20px;
}

.sec {
  height: 50px;
  border-radius: 0 25px 25px 0;
  transition: background .2s ease-in-out;
  display: flex;
  flex-direction: row;
  align-items: center;
  color: #666;
}

.sec_icon {
  margin: 0 0 0 20px;
}

.sec_name {
  margin: 0 0 0 35px;
}

.sec_blank {
  height: 1px;
  background: #ccc;
  margin: 8px 0;
}

.float_container {
  position: absolute;
  bottom: 90px;
  right: 50rpx;
  transition: bottom .2s ease-in-out;
}

.float {
  position: absolute;
  right: 0;
  bottom: 0;
  width: 55px;
  height: 55px;
  box-shadow: 0 0 10rpx #bbb;
  border-radius: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  background: #ffffff;
  transition: background .2s ease-in-out, bottom .2s ease-in-out, transform .2s linear;
}

.float_color {
  width: 100%;
  height: 100%;
  border-radius: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  transition: background .2s ease-in-out, bottom .2s ease-in-out, transform .2s linear;
}

.float_selection {
  right: 5px;
  position: absolute;
  display: flex;
  flex-direction: row;
  justify-content: flex-end;
  align-items: center;
  overflow: hidden;
  bottom: 0;
  transition: bottom .2s ease-in-out, width .2s ease-in-out;
  width: 55px;
  height: 50px;
}

.float_selection_text {
  font-size: .9rem;
  flex: 1 0 auto;
  width: 90px;
  height: 30px;
  background: #fff;
  box-shadow: 0 0 10rpx #bbb;
  white-space: nowrap;
  border-radius: 5px;
  display: flex;
  justify-content: center;
  align-items: center;
  margin: 0 20px 0 10px;
  color: #666;
}

.float_selection_bg {
  flex: 1 0 auto;
  width: 45px;
  height: 45px;
  box-shadow: 0 0 10rpx #bbb;
  border-radius: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  background: #ffffff;
  transition: background .2s ease-in-out;
}

.float_selection_color {
  width: 100%;
  height: 100%;
  border-radius: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  transition: background .2s ease-in-out;
}

.h_float {
  bottom: 25px;
}

.hover {
  background: var(--rgbaprimaryColor--) !important;
}

.t_hover {
  background: var(--rgbaprimaryColor--);
}

.c_hover {
  opacity: .9;
}


