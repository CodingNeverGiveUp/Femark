<view class="float" style="--rgbaprimaryColor--:{{rgbaPrimaryColor}};{{floatStyle}}" hover-class="t_hover" bindtap="floatTap" bindlongpress="record">
  <view class="material-icons" style="color:{{primaryColor}};"><text>add</text></view>
</view>

<view class="main" bindtouchstart='touchStart' bindtouchmove='touchMove' bindtouchend='touchEnd' style="{{mainStyle}}">
  <view>
    <view class="item" data-path="/pages/index/index" bindtap="switch" hover-class="hover"
      style="--rgbaprimaryColor--:{{rgbaPrimaryColor}};">
      <view style="{{btn1}}">
        <view class="material-icons"><text>mode</text></view>
        <view>记事</view>
      </view>
    </view>
    <view class="item" data-path="/pages/category/category" bindtap="switch" hover-class="hover"
      style="--rgbaprimaryColor--:{{rgbaPrimaryColor}};">
      <view style="{{btn2}}">
        <view class="material-icons"><text>archive</text></view>
        <view>分类</view>
      </view>
    </view>
    <view class="item" data-path="/pages/account/account" bindtap="switch" hover-class="hover"
      style="--rgbaprimaryColor--:{{rgbaPrimaryColor}};">
      <view style="{{btn3}}">
        <view class="material-icons"><text>account_circle</text></view>
        <view>我的</view>
      </view>
    </view>
  </view>
</view>