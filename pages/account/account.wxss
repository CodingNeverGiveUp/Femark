.hover {
  background: var(--rgbaprimaryColor--);
  transition: none;
}

.t_hover {
  background: var(--rgbaprimaryColor--);
}

.fixed{
  position: fixed;
  width: 100%;
  height: 820rpx;
}

.header{
  height: 100%;
  padding: 50rpx 50rpx 80rpx 50rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  background-size: cover;
  background-position: center;
  background-repeat: no-repeat;
}

.head{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}

.motto_container{
  width: 400rpx;
  display: flex;
  flex-direction: column;
  color: white;
}

.motto{
  font-size: 1.2rem;
  margin: 0 0 30rpx 0;
}

.motto_subtitle{
  color: #ddd;
  font-size: 0.8rem;
}

.scroller{
  height: 100%;
  position: absolute;
}

.settings{
  position: fixed;
  width: 100rpx;
  height: 100rpx;
  right: 25rpx;
  top: 25rpx;
}

.footer{
  position: relative;
  top: 900rpx;
  width: 100%;
}

.bar{
  height: 70rpx;
  border-radius: 10px 10px 0 0;
  background: #f1f1f1;
  /* box-shadow: 0 -5rpx 20rpx #666; */
  display: flex;
  justify-content: center;
  align-items: center;
}

.bar > view{
  width: 40px;
  height: 4px;
  border-radius: 2px;
  background: #999;
}

.content{
  padding: 0 30rpx 50rpx 30rpx;
  background: #f1f1f1;
}

.scroll{
  display: flex;
  flex-direction: row;
  flex-wrap: nowrap;
  height: 270rpx;
}

.scroll_item{
  flex: 0 0 220rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.scroll_card{
  width: 190rpx;
  height: 230rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  background: #fff;
  border-radius: 0.8rem;
  font-size: 0.8rem;
}

.h_scroll_card{
  opacity: .7;
}

.heading{
  font-size: 1.4rem;
}

.setting_container{
  display: flex;
  flex-direction: column;
}

.user_card{
  display: flex;
  flex-direction: row;
  align-items: center;
  background: #fff;
  border-radius: 10px;
  height: 100px;
  /* box-shadow: 0 0rpx 10rpx #bbb; */
  transition: background .2s ease-in-out;
}

.user_card image{
  width: 50px;
  height: 50px;
  border-radius: 100%;
  margin: 0 0 0 50rpx;
}

.user_card > view{
  margin: 0 0 0 50rpx;
  display: flex;
  flex-direction: column;
}

/* .user_name{
  font-size: 1.2rem;
} */

.user_description{
  color: #666;
  font-size: 0.8rem;
}

.setting_box{
  display: flex;
  flex-direction: row;
  align-items: center;
  margin: 10px 0 0 0;
  padding: 0 20rpx;
  height: 60px;
  border-radius: 10px;
  transition: background .2s ease-in-out;
}

#feedback{
  display: flex;
  flex-direction: row;
  align-items: center;
  margin: 0;
  width: 100%;
  height: 100%;
  font-weight: normal;
  font-size: 1rem;
  padding: 0;
  background: rgba(0,0,0,0);
  transition: background .2s ease-in-out;
}

#feedback text{
  color: #000!important;
}

#feedback .subtitle{
  color: #666!important;
}

.text{
  margin: 0 0 0 25px;
  width: 300rpx;
  display: flex;
  flex-direction: column;
  align-items: flex-start;
}

.subtitle{
  color: #666;
  font-size: 0.8rem;
}


/* 一般情况下的样式 end */

@media only screen and (min-width: 600px){
  .content{
    display: flex;
    flex-direction: row;
    align-items: center;
  }

  .user_info{
    width: 50%;
    display: flex;
    justify-content: center;
    align-items: center;
  }

  .user_card{
    width: 180rpx;
    height: 250rpx;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
  }

  .user_card image{
    margin: 20rpx 0;
  }

  .user_card > view{
    margin: 0;
    text-align: center;
  }

  .setting_container{
    width: 50%;
    align-self: center;
  }
}

@media (prefers-color-scheme: dark) {
  /* DarkMode 下的样式 start */

  .bar{
    background: #303638;
  }

  .bar > view{
    background: #ccc;
  }

  .content{
    background: #303638;
  }

  .user_card{
    background: #222426;
  }

  .user_description{
    color: #ccc;
  }

  .setting_box text{
    color: #fff;
  }

  #feedback text{
    color: #fff!important;
  }
  
  #feedback .subtitle{
    color: #ccc!important;
  }

  .subtitle{
    color: #ccc!important;
  }

  .scroll_card{
    background: #444;
  }

  /* DarkMode 下的样式 end */
}