/**index.wxss**/
@import "/source/icon.wxss";

.hover {
  background: var(--rgbaprimaryColor--)!important;
}

.c_hover{
  opacity: .9;
}

.page_selector {
  position: absolute;
  top: -150px;
  margin: 0 50rpx;
  left: 0;
  right: 0;
  height: auto;
  display: flex;
  flex-direction: column;
  background: #ffffff;
  border-radius: 0 0 10px 10px;
  box-shadow: 0 0rpx 10rpx #bbb;
  overflow: hidden;
  transition: top .2s ease-in-out, background .2s ease-in-out;
  z-index: 998;
}

.page_selector_blank {
  height: 25px;
}

.page_selector_item {
  /* border: hotpink solid 1px; */
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center;
  height: 60px;
  color: #666;
  transition: background .2s ease-in-out, color .2s ease-in-out;
}

.page_selector .icon {
  margin: 0 0 0 50rpx
}

.page_selector .text {
  margin: 0 0 0 50rpx
}

.container {
  display: flex;
  flex-direction: column;
  position: relative;
  min-height: 100vh;
}

.pad_empty{
  position: absolute;
  top: 0;
  right: 0;
  left: 0;
  bottom: 0;
  margin: auto;
}

.note {
  padding: 40px 40rpx 0 40rpx;
}

.todo {
  padding: 40px 40rpx 0 40rpx;
}

.head {
  height: 300rpx;
  /* background: #000; */
  display: flex;
  flex-direction: column;
}

.head_title {
  font-size: 1.4rem;
  display: flex;
  flex-direction: row;
  align-items: center;
}

.head_subtitle {
  font-size: .8rem;
  color: #666;
}

.empty{
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.empty image{
  width: 100px;
}

.empty text{
  text-align: center;
  font-size: .8rem;
  margin: 50px 0 0 0;
  color: #666;
}

@media only screen and (min-width: 600px) {
  .container {
    display: flex;
    flex-direction: row;
  }

  .note {
    width: 50%;
    padding: 40px 10rpx 0 40rpx;
  }

  .todo {
    width: 50%;
    padding: 40px 40rpx 0 10rpx;
  }
}


/* 笔记 */

.note_content {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  margin-bottom: 100px;
}

#note_left {
  width: 47%;
  min-height: .1px;
  height: fit-content;
}

#note_right {
  width: 47%;
  min-height: .1px;
  height: fit-content;
}

.note_block {
  border-radius: 10px;
  box-shadow: 0 0 10rpx #bbb;
  overflow: hidden;
  transition: opacity .2s ease-in-out, background .2s ease-in-out;
  margin: 0 0 20px 0;
}

.note_color{
  color: #fff;
}

.note_color_p{
  color: #000;
}

.note_color_sub_p{
  color: #666;
}

.note_image {
  height: 130px;
  width: 100%;
  display: flex;
  flex-direction: column;
  justify-content: flex-end;
  background-size: cover;
  background-position: center;
}

.note_image_tip {
  font-size: .8rem;
  background: #000;
  opacity: .6;
  width: 100%;
  color: #fff;
  padding: 2px 10px;
}

.note_text {
  padding: 10px;
  display: flex;
  flex-direction: column;
}

.note_title {
  width: 100%;
  flex: 1 0 auto;
  font-size: 1.2rem;
  margin-bottom: 10px;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.note_sub {
  line-height: 20px;
  width: 100%;
  flex: 1 0 auto;
  max-height: 160px;
  overflow: hidden;
  /* text-overflow: ellipsis; */
}

.note_encrypt{
  height: 80px;
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-content: space-evenly;
  align-items: center;
}
