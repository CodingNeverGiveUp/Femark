.db_box {
  box-shadow: 0 0 10rpx #bbb;
  border-radius: 10px;
  height: 90px;
  display: flex;
  flex-direction: row;
  align-items: center;
  margin-bottom: 20px;
  overflow: hidden;
  transition: opacity .2s ease-in-out, background .2s ease-in-out;
}

.db_color{
  color: #fff;
}

.db_color_p{
  color: #000;
}

.db_color_sub{
  color: #ccc;
}

.db_color_sub_p{
  color: #666;
}

.box_left {
  width: 25%;
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.box_right {
  width: 75%;
  height: 100%;
  position: relative;
}

.box_right_bg{
  position: absolute;
  filter: brightness(80%);
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;
}

.box_right_bg_p{
  position: absolute;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;
  border-left: 1px solid #ccc;
}

.box_right_text{
  position: absolute;
  display: flex;
  flex-direction: column;
  justify-content: center;
  top: 0;
  bottom: 0;
  left: 25px;
}

.month {
  font-size: .8rem;
}

.day {
  font-size: 1.5rem;
  padding-top: 2px;
}

.topic {
  text-overflow: ellipsis;
  overflow: hidden;
  white-space: nowrap;
}

.ddl {
  padding-top: 5px;
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center;
  font-size: .8rem;
}

.ddl view{
  margin-right: 10px;
}








/* 深色模式 */
@media (prefers-color-scheme: dark) {
  .page_selector {
    background: #303638;
    box-shadow: 0 0rpx 10rpx #222;
    color: #fff;
  }

  .page_selector_item{
    color: #ccc;
  }

  .head_subtitle{
    color: #ccc;
  }

  .empty text{
    color: #ccc;
  }

  .note_block{
    box-shadow: 0 0 10rpx #222;
  }

  .note_color_p{
    color: #fff;
  }
  
  .note_color_sub_p{
    color: #ccc;
  }

  .db_box{
    box-shadow: 0 0 10rpx #222;
  }

  .box_right_bg_p{
    border-left: 1px solid #666;
  }

  .db_color_p{
    color: #fff;
  }

  .db_color_sub_p{
    color: #ccc;
  }
}