<!--index.wxml-->
<!-- 切换顶条 -->
<view wx:if="{{!isPad}}" style="{{selectorStyle}};--rgbaprimaryColor--:{{rgbaPrimaryColor}};" class="page_selector">
  <view class="page_selector_blank"></view>
  <view class="page_selector_item" style="{{sel1}};" bindtap="sel1"
    hover-class="hover">
    <text class="material-icons icon">mode</text>
    <text class="text">笔记</text>
  </view>
  <view class="page_selector_item" style="{{sel2}};" bindtap="sel2"
    hover-class="hover">
    <text class="material-icons icon">add_task</text>
    <text class="text">待办</text>
  </view>
</view>



<view class="container">
  <!-- 笔记 -->
  <view class="note" wx:if="{{isPad == true || currentPage == 1}}">
    <view class="head" style="{{useSidebar?'margin-left:45px;':''}}">
      <view class="head_title" bindtap="showSelector">
        <text>笔记</text>
        <text class="material-icons">expand_more</text>
      </view>
      <text class="head_subtitle">共{{note.length}}条数据</text>
    </view>
    <view class="note_content">
      <view id="note_left">
        <view class="note_block" wx:for="{{noteLeft}}" wx:key="index" style="background:{{item.color}};" hover-class="c_hover" bindtap="note" data-data="{{item}}">
          <view wx:if="{{item.gallery.length != 0}}" class="note_image" style="background-image: url({{item.galleryDetail[0].tempFileURL}});">
            <view class="note_image_tip">
              <text>共{{item.gallery.length}}张图片</text>
            </view>
          </view>
          <view class="note_text">
            <view wx:if="{{item.heading!=null}}" class="note_title">{{item.heading}}</view>
            <view class="note_sub">{{item.content}}</view>
          </view>
        </view>
      </view>
      <view id="note_right">
        <view class="note_block" wx:for="{{noteRight}}" wx:key="index" style="background:{{item.color}};" hover-class="c_hover" bindtap="note" data-data="{{item}}">
          <view wx:if="{{item.gallery.length != 0}}" class="note_image" style="background-image: url({{item.galleryDetail[0].tempFileURL}});">
            <view class="note_image_tip">
              <text>共{{item.gallery.length}}张图片</text>
            </view>
          </view>
          <view class="note_text">
            <view wx:if="{{item.heading!=null}}" class="note_title">{{item.heading}}</view>
            <view class="note_sub">{{item.content}}</view>
          </view>
        </view>
      </view>
    </view>
  </view>


  <!-- 待办 -->
  <view class="todo" wx:if="{{isPad == true || currentPage == 2}}">
    <view class="head" style="{{useSidebar?'margin-left:45px;':''}}">
      <view class="head_title" bindtap="showSelector">
        <text>待办</text>
        <text class="material-icons">expand_more</text>
      </view>
      <text class="head_subtitle">共{{task.length}}条数据</text>
    </view>
    <view class="main">
      <view wx:for="{{task}}" wx:key="index">
        <view class="db_box" style="background-color:{{item.color}};">
          <view class="box_left">
            <view class="month">{{item.month}}</view>
            <view class="day">{{item.date}}</view>
          </view>
          <view class="box_right">
            <view class="topic">{{item.heading}}</view>
            <view class="ddl">
              <view wx:if="{{item.notification}}" class="material-icons" style="font-size:.8rem">notifications_active</view>
              <text>{{item.time}}</text>
            </view>
          </view>
        </view>
      </view>
    </view>
  </view>
</view>

