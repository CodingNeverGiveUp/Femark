/* pages/guide/guide.wxss */
@import "/source/icon.wxss";

.hover{
  background: var(--rgbaprimaryColor--);
}

.icon{
  position: fixed;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;
  margin: auto;
  width: 200px;
  height: 200px;
}

.text{
  width: 750rpx;
  padding: 50rpx;
}

.scroll{
  /* background: pink; */
  width: 750rpx;
  height: 100vh;
}

.title{
  font-size: 1.3rem;
}

.subtitle{
  font-size: .8rem;
  color: #666;
}

.full_view{
  width: 1500rpx;
  height: 100%;
  display: flex;
  flex-direction: row;
  align-items: flex-end;
}

.float {
  position: fixed;
  bottom: 50rpx;
  right: 50rpx;
  width: 55px;
  height: 55px;
  box-shadow: 0 0 10rpx #bbb;
  border-radius: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  background: #ffffff;
  transition: background .2s ease-in-out, transform .2s linear;
}

.float_color {
  width: 100%;
  height: 100%;
  border-radius: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  transition: background .2s ease-in-out, transform .2s linear;
}

@media (prefers-color-scheme: dark) {
  .subtitle{
    color: #ccc;
  }

  .float{
    background: #303638;
    box-shadow: 0 0 10rpx #222;
  }
}