/* pages/note/note.wxss */
@import "/source/icon.wxss";

page {
  background-color: #f1f1f1;
}

.hover {
  background: var(--rgbaprimaryColor--);
}

.head_bar {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  background: #fff;
  padding: 20px 10px 0;
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center;
  height: 60px;
  z-index: 999;
}

.icon {
  width: 40px;
  height: 40px;
  border-radius: 100%;
  /* background: pink; */
  display: flex;
  justify-content: center;
  align-items: center;
  transition: background .2s ease-in-out;
  color: #444;
}

.float {
  position: fixed;
  bottom: 25px;
  right: 50rpx;
  width: 55px;
  height: 55px;
  box-shadow: 0 0 10rpx #bbb;
  border-radius: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  background: #ffffff;
  transition: background .2s ease-in-out;
  z-index: 999;
}

.float_color {
  width: 100%;
  height: 100%;
  border-radius: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  transition: background .2s ease-in-out;
}

.bottom_bar {
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100vw;
  height: 50px;
  padding: 0 10px;
  background: #fff;
  display: flex;
  align-items: center;
  box-shadow: 0 0rpx 10rpx #bbb;
  z-index: 998;
}

.bottom_bar .icon{
  margin-right: 12px;
}

.scroll {
  padding: 80px 0 0 0;
  display: flex;
  flex-direction: row;
  width: 100vw;
  height: 100vh;
  /* background: #000; */
}

.side {
  flex: 1 0 auto;
  width: 425rpx;
  height: 200px;
  /* background: green; */
}

.main {
  flex: 1 0 auto;
  width: 100vw;
  /* background: yellowgreen; */
}

.heading input{
  width: 100%;
  height: 2rem;
  /* padding: 0 0 .2rem 0; */
  border-bottom: #000 solid 2px;
  transition: border .2s ease-in-out;
}

.preview {
  flex: 1 0 auto;
  width: 100vw;
  /* height: 200px; */
  background: orange;
}

.heading {
  font-size: 1.4rem;
  padding: 0 20px;
  height: 80px;
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.num{
  font-size: .8rem;
  align-self: flex-end;
  color: #666;
  transition: color .2s ease-in-out;
}

.content {
  padding: 0 20px 400px;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  /* background: #000; */
}

.content textarea{
  min-height: 400rpx;
}

.photos{
  margin-top: 50rpx;
}

#empty{
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  height: 500rpx;
}

#empty image{
  width: 80px;
  margin-bottom: 20px;
}

#empty text{
  font-size: .8rem;
  color: #666;
}

.preview_container {
  padding: 0 20px;
  min-height: 400rpx;
}

.placeholder {
  color: #666;
}

.subtitle{
  margin-left: 50rpx;
  font-size: .8rem;
}

@media (prefers-color-scheme: dark) {
  page {
    background-color: #222426;
  }
}