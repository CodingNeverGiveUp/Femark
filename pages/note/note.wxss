/* pages/note/note.wxss */
@import "/source/icon.wxss";

.hover {
  background: var(--rgbaprimaryColor--);
}

.f_hover{
  background: var(--rgbaprimaryColor--);
  color: var(--primaryColor--);
}

.head_bar {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  background: rgba(0, 0, 0, 0);
  height: 60px;
  /* box-shadow: 0 0rpx 10rpx #bbb; */
  padding: 20px 10px 0;
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center;
  z-index: 999;
  transition: background .2s ease-in-out, box-shadow .2s ease-in-out;
}

.icon {
  width: 40px;
  height: 40px;
  border-radius: 100%;
  /* background: pink; */
  display: flex;
  justify-content: center;
  align-items: center;
  transition: background .2s ease-in-out;
  color: #444;
  flex: 0 0 auto;
}

.btn {
  position: relative;
  right: -300rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 1rem;
  width: 100px;
  height: 40px;
  border-radius: 22px;
  background: #fff;
  box-shadow: 0 0 10rpx #bbb;
  transition: background .2s ease-in-out, right .5s ease-in-out;
}

.btnp {
  background: var(--rgbaprimaryColor--);
}

.float {
  position: fixed;
  bottom: 23px;
  right: 40rpx;
  transition: bottom .2s ease-in-out;
  z-index: 999;
}

.float_tools_container {
  position: absolute;
  right: 27px;
  bottom: 0;
  height: 55px;
  overflow: hidden;
  /* background: #000; */
  display: flex;
  align-items: center;
  transition: width .2s ease-in-out;
}

.float_tools {
  position: absolute;
  left: 0;
  width: 102px;
  height: 40px;
  display: flex;
  flex-direction: row;
  align-items: center;
  background: #fff;
  box-shadow: 0 0 10rpx #bbb;
  border-radius: 20px 0 0 20px;
  padding-left: 8px;
}

.float_tools .icon{
  width: 35px;
  height: 35px;
  font-size: 20px;
}

.float_bg {
  right: 0;
  bottom: 0;
  position: absolute;
  width: 55px;
  height: 55px;
  /* box-shadow: 0 0 10rpx #bbb; */
  border-radius: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  background: #ffffff;
  transition: background .2s ease-in-out;
  z-index: 999;
}

.float_color {
  width: 100%;
  height: 100%;
  border-radius: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  box-shadow: 0 0 10rpx #bbb;
  transition: background .2s ease-in-out;
  /* background: #fff; */
}

.bottom_bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  height: 50px;
  padding: 0 10px;
  background: #fff;
  display: flex;
  align-items: center;
  box-shadow: 0 0rpx 10rpx #bbb;
  z-index: 998;
}

.bottom_bar .icon {
  margin-right: 12px;
}

.scroll {
  box-sizing: border-box;
  padding: 80px 0 0 0;
  display: flex;
  flex-direction: row;
  width: 100vw;
  height: 100vh;
  /* background: #000; */
}

.side_bg {
  background: #fff;
}

.side {
  flex: 1 0 auto;
  width: 425rpx;
  max-width: 400px;
}

.main {
  flex: 1 0 auto;
  width: 100vw;
  /* background: yellowgreen; */
}

.heading input {
  width: 100%;
  height: 2rem;
  /* padding: 0 0 .2rem 0; */
  border-bottom: rgba(0, 0, 0, 0) solid 2px;
  transition: border .2s ease-in-out;
}

.preview {
  flex: 1 0 auto;
  width: 100vw;
  margin: 0 0 500px 0;
  /* height: 200px; */
  /* background: orange; */
}

.preview_bg {
  border-left: solid 1px #bbb;
}

.heading {
  font-size: 1.4rem;
  padding: 0 20px;
  height: 80px;
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.content{
  display: flex;
  flex-direction: column;
  padding: 0 20px;
}

.num {
  font-size: .8rem;
  align-self: flex-end;
  color: #666;
  transition: color .2s ease-in-out;
}

.ql-container {
  box-sizing: border-box;
  width: 100%;
  height: 100%;
  font-size: 16px;
  line-height: 1.5;
  overflow: auto;
  /* padding: 0 20px; */
}

.ql-active {
  /* background: var(--rgbaprimaryColor--); */
  color: var(--primaryColor--);
}

.toolbar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  height: 50px;
  background: #fff;
  box-shadow: 0 0rpx 10rpx #bbb;
  z-index: 998;
  transition: height .2s ease-in-out;
}

.toolbar_section {
  box-sizing: border-box;
  padding: 0 10px;
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 50px;
}

.description{
  margin-left: 10px;
}

.format_size {
  display: flex;
  width: 100%;
  height: 100%;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
}

.format_size slider {
  width: 300rpx;
}

.format_color {
  display: flex;
  width: 100%;
  height: 100%;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
}

.format_color .colors {
  height: 100%;
  display: flex;
  flex-direction: row;
  align-items: center;
}

.format_color .color_bg {
  height: 20px;
  width: 20px;
  border-radius: 100%;
  border-width: 2px;
  border-style: solid;
  border-color: #fff;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-left: 2px;
  transition: border .2s ease-in-out;
}

.format_color .color{
  height: 18px;
  width: 18px;
  border-radius: 100%;
}

.format_align {
  display: flex;
  width: 100%;
  height: 100%;
  flex-direction: row;
  justify-content: space-around;
  align-items: center;
}

.format_align_section{
  font-size: .8rem;
  display: flex;
  align-items: center;
  padding: 10px 5px;
  border-radius: 5px;
  transition: background .2s ease-in-out;
}

.format_align_section .material-icons{
  font-size: 1rem;
}

.format_list {
  display: flex;
  width: 100%;
  height: 100%;
  flex-direction: row;
  justify-content: space-around;
  align-items: center;
}

.toolbar_main {
  box-sizing: border-box;
  padding: 0 10px;
  background: #fff;
  position: absolute;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 50px;
  display: flex;
  align-items: center;
  justify-content: space-around;
}

.toolbar .icon {
  width: 35px;
  height: 35px;
  flex: 0 0 auto;
  margin-right: 0;
}

/* .content {
  padding: 0 20px 800px;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
} */

/* .content textarea {
  width: 100%;
  min-height: 400rpx;
} */

.photos {
  margin-top: 50rpx;
}

.empty {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.empty image {
  width: 80px;
  margin-bottom: 20px;
}

.empty text {
  font-size: .8rem;
  color: #666;
}

.Imgs {
  margin: 30px 50rpx;
}

.Img {
  position: relative;
  width: 100%;
}

.Img image {
  /* margin: 0 50px; */
  height: 250rpx;
  width: 100%;
}

.deleteImg {
  position: absolute;
  top: 0;
  right: 0;
  width: 40px;
  height: 40px;
  display: flex;
  justify-content: center;
  align-items: center;
  border-radius: 100%;
  transition: background .2s ease-in-out;
}

.file{
  padding: 10px 50rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  transition: background .2s ease-in-out;
}

.file .material-icons{
  margin-right: 10px;
}

.file .filename{
  font-size: .8rem;
}

.preview_container {
  padding: 0 20px;
  min-height: 400rpx;
}

.placeholder {
  color: #666;
}

.subtitle {
  margin-left: 50rpx;
  font-size: .8rem;
}

.snackbar {
  position: fixed;
  bottom: -50px;
  right: 0;
  left: 0;
  height: 50px;
  /* transform: translateX(-50%); */
  background: #323232;
  z-index: 1000;
  display: flex;
  align-items: center;
  padding: 0 50rpx;
  transition: bottom .3s ease;
}

.snackbar text {
  color: #fff;
}

@media (prefers-color-scheme: dark) {
  .btn {
    background: #222426;
    box-shadow: 0 0rpx 10rpx #222;
  }

  .float {
    background: #303638;
    /* box-shadow: 0 0rpx 10rpx #222; */
  }

  .float_color {
    box-shadow: 0 0rpx 10rpx #444;
  }

  .bottom_bar {
    background: #303639;
    box-shadow: 0 0rpx 10rpx #222;
  }

  .side_bg {
    background: #303638;
  }

  .preview_bg {
    border-left: solid 1px #666;
  }

  .num {
    color: #ccc;
  }

  .empty text {
    color: #ccc;
  }

  .placeholder {
    color: #666;
  }

  .icon {
    color: #ccc;
  }

  .snackbar {
    background: #5d5d5d;
  }
}

@media only screen and (min-width: 600px) {
  .content {
    padding: 0 20px;
  }

  .snackbar {
    left: 200rpx;
    right: 200rpx;
  }
}