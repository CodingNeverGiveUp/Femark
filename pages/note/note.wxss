/* pages/note/note.wxss */
@import "/source/icon.wxss";

page {
  background-color: #f1f1f1;
}

.hover {
  background: var(--rgbaprimaryColor--);
}

.head_bar {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  background: rgba(0, 0, 0, 0);
  height: 60px;
  /* box-shadow: 0 0rpx 10rpx #bbb; */
  padding: 20px 10px 0;
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center;
  z-index: 999;
  transition: background .2s ease-in-out, box-shadow .2s ease-in-out;
}

.icon {
  width: 40px;
  height: 40px;
  border-radius: 100%;
  /* background: pink; */
  display: flex;
  justify-content: center;
  align-items: center;
  transition: background .2s ease-in-out;
  color: #444;
}

.btn {
  position: relative;
  right: -300rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 1rem;
  width: 100px;
  height: 40px;
  border-radius: 22px;
  background: #fff;
  box-shadow: 0 0 10rpx #bbb;
  transition: background .2s ease-in-out, right .5s ease-in-out;
}

.btnp {
  background: var(--rgbaprimaryColor--);
}

.float {
  position: fixed;
  bottom: 25px;
  right: 50rpx;
  width: 55px;
  height: 55px;
  /* box-shadow: 0 0 10rpx #bbb; */
  border-radius: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  background: #ffffff;
  transition: background .2s ease-in-out;
  z-index: 999;
}

.float_color {
  width: 100%;
  height: 100%;
  border-radius: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  box-shadow: 0 0 10rpx #bbb;
  transition: background .2s ease-in-out;
  /* background: #fff; */
}

.bottom_bar {
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100vw;
  height: 50px;
  padding: 0 10px;
  background: #fff;
  display: flex;
  align-items: center;
  box-shadow: 0 0rpx 10rpx #bbb;
  z-index: 998;
}

.bottom_bar .icon {
  margin-right: 12px;
}

.scroll {
  padding: 80px 0 0 0;
  display: flex;
  flex-direction: row;
  width: 100vw;
  height: 100vh;
  /* background: #000; */
}

.side {
  flex: 1 0 auto;
  width: 425rpx;
  height: 200px;
  max-width: 400px;
  /* background: green; */
}

.main {
  flex: 1 0 auto;
  width: 100vw;
  /* background: yellowgreen; */
}

.heading input {
  width: 100%;
  height: 2rem;
  /* padding: 0 0 .2rem 0; */
  border-bottom: rgba(0, 0, 0, 0) solid 2px;
  transition: border .2s ease-in-out;
}

.preview {
  flex: 1 0 auto;
  width: 100vw;
  margin: 0 0 500px 0;
  /* height: 200px; */
  /* background: orange; */
}

.heading {
  font-size: 1.4rem;
  padding: 0 20px;
  height: 80px;
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.num {
  font-size: .8rem;
  align-self: flex-end;
  color: #666;
  transition: color .2s ease-in-out;
}

.content {
  padding: 0 20px 800px;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  /* background: #000; */
}

.content textarea {
  width: 100%;
  min-height: 400rpx;
}

.photos {
  margin-top: 50rpx;
}

.empty {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.empty image {
  width: 80px;
  margin-bottom: 20px;
}

.empty text {
  font-size: .8rem;
  color: #666;
}

.Imgs{
  margin: 30px 50rpx;
}

.Img{
  position: relative;
  width: 100%;
}

.Img image{
  /* margin: 0 50px; */
  height: 250rpx;
  width: 100%;
}

.deleteImg{
  position: absolute;
  top: 0;
  right: 0;
  width: 40px;
  height: 40px;
  display: flex;
  justify-content: center;
  align-items: center;
  border-radius: 100%;
  transition: background .2s ease-in-out;
}

.preview_container {
  padding: 0 20px;
  min-height: 400rpx;
}

.placeholder {
  color: #666;
}

.subtitle {
  margin-left: 50rpx;
  font-size: .8rem;
}

.snackbar {
  position: fixed;
  bottom: -50px;
  right: 0;
  left: 0;
  height: 50px;
  /* transform: translateX(-50%); */
  background: #323232;
  z-index: 1000;
  display: flex;
  align-items: center;
  padding: 0 50rpx;
  transition: bottom .3s ease;
}

.snackbar text{
  color: #fff;
}

@media (prefers-color-scheme: dark) {
  page {
    background-color: #303638;
  }

  .head_bar{
    background: #303638;
    /* box-shadow: 0 0rpx 10rpx #222; */
  }

  .btn{
    background: #222426;
    box-shadow: 0 0rpx 10rpx #222;
  }

  .float{
    background: #222426;
    /* box-shadow: 0 0rpx 10rpx #222; */
  }

  .float_color{
    box-shadow: 0 0rpx 10rpx #444;
  }

  .bottom_bar{
    background: #222426;
    box-shadow: 0 0rpx 10rpx #222;
  }

  .num{
    color: #ccc;
  }

  .empty text {
    color: #ccc;
  }

  .placeholder {
    color: #ccc;
  }

  .icon{
    color: #ccc;
  }

  .snackbar{
    background: #5d5d5d;
  }
}