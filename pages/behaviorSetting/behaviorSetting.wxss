/* pages/behaviorSetting/behaviorSetting.wxss */
@import "/source/icon.wxss";
.scroll {
  /* padding: 80px 0 0 0; */
  display: flex;
  width: 100vw;
  height: 100vh;
  /* background: #000; */
}

.hover {
  background: var(--rgbaprimaryColor--)!important;
}

.main{
  margin-top: 80px;
  width: 100%;
  display: flex;
  flex-direction: column;
}

.icon {
  width: 40px;
  height: 40px;
  border-radius: 100%;
  /* background: pink; */
  display: flex;
  justify-content: center;
  align-items: center;
  transition: background .2s ease-in-out;
  color: #444;
}

.head_bar {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  background: rgba(0, 0, 0, 0);
  height: 60px;
  /* box-shadow: 0 0rpx 10rpx #bbb; */
  padding: 20px 10px 0;
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center;
  z-index: 999;
  transition: background .2s ease-in-out, box-shadow .2s ease-in-out;
}

.subtitle {
  margin-left: 50rpx;
  font-size: .8rem;
}

.sub{
  color: #666
}