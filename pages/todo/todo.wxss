/* pages/todo/todo.wxss */
@import "/source/icon.wxss";

.scroll {
  padding: 80px 0 0 0;
  display: flex;
  width: 100vw;
  height: 100vh;
  /* background: #000; */
}


.main {
  flex: 1 0 auto;
  width: 100vw;
  margin-bottom: 300px;
  /* background: yellowgreen; */
}

.icon {
  width: 40px;
  height: 40px;
  border-radius: 100%;
  /* background: pink; */
  display: flex;
  justify-content: center;
  align-items: center;
  transition: background .2s ease-in-out;
  color: #444;
}

.heading input {
  width: 100%;
  height: 2rem;
  /* padding: 0 0 .2rem 0; */
  border-bottom: rgba(0, 0, 0, 0) solid 2px;
  transition: border .2s ease-in-out;
}

.heading {
  font-size: 1.4rem;
  padding: 0 20px;
  height: 80px;
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.num {
  font-size: .8rem;
  align-self: flex-end;
  color: #666;
  transition: color .2s ease-in-out;
}

.content {
  padding: 0 20px;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  /* background: #000; */
}

.content textarea {
  width: 100%;
  min-height: 400rpx;
}

.list {
  min-height: 400rpx;
}

.list_item {
  position: relative;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  padding: 0 10px;
  height: 40px;
  /* transition: box-shadow .2s ease-in-out; */
  background: #f1f1f1;
}

.list_item_left {
  display: flex;
  flex-direction: row;
  align-items: center;
  width: 100%;
}

.list_item input {
  margin-left: 10px;
  width: 70%;
}

.list_add_item {
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center;
  padding: 0 50px;
  transition: background .2s ease-in-out;
}

.list_add_item text{
  color: #666;
}

.blank{
  /* background: chocolate; */
  width: 100%;
  height: 60px;
}

.float {
  position: fixed;
  bottom: 25px;
  right: 50rpx;
  width: 55px;
  height: 55px;
  /* box-shadow: 0 0 10rpx #bbb; */
  border-radius: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  background: #ffffff;
  transition: background .2s ease-in-out;
  z-index: 999;
}

.head_bar {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  background: rgba(0, 0, 0, 0);
  height: 60px;
  /* box-shadow: 0 0rpx 10rpx #bbb; */
  padding: 20px 10px 0;
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center;
  z-index: 999;
  transition: background .2s ease-in-out, box-shadow .2s ease-in-out;
}

.bottom_bar {
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100vw;
  height: 50px;
  padding: 0 10px;
  background: #fff;
  display: flex;
  align-items: center;
  box-shadow: 0 0rpx 10rpx #bbb;
  z-index: 998;
}

.bottom_bar .icon {
  margin-right: 12px;
}

.float_color {
  width: 100%;
  height: 100%;
  border-radius: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  box-shadow: 0 0 10rpx #bbb;
  transition: background .2s ease-in-out;
  /* background: #fff; */
}

.subtitle {
  margin-left: 50rpx;
  font-size: .8rem;
}

.snackbar {
  position: fixed;
  bottom: -50px;
  right: 0;
  left: 0;
  height: 50px;
  /* transform: translateX(-50%); */
  background: #323232;
  z-index: 1000;
  display: flex;
  align-items: center;
  padding: 0 50rpx;
  transition: bottom .3s ease;
}

.snackbar text {
  color: #fff;
}

@media (prefers-color-scheme: dark) {
  .snackbar {
    background: #5d5d5d;
  }
}