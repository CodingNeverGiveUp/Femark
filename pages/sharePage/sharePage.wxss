  border-radius: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  background: #ffffff;
  box-shadow: 0 0 10rpx #bbb;
  transition: background .2s ease-in-out;
  z-index: 999;
  padding: 0;
  margin: 0;
}

